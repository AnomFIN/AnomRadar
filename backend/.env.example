# Backend Scanner Configuration

# Database (Local or Remote MySQL)
# For local installation, use localhost
# For remote MySQL on anomfin.fi, use remote host or SSH tunnel
DB_HOST=localhost
DB_PORT=3306
DB_NAME=anomradar
DB_USER=anomradar
DB_PASSWORD=change_this_password

# Remote Database (anomfin.fi) - Optional
# If using remote MySQL, update above values or use SSH tunnel:
# ssh -L 3306:localhost:3306 user@anomfin.fi
# Then connect to localhost:3306
REMOTE_DB_HOST=anomfin.fi
REMOTE_DB_PORT=3306
REMOTE_DB_NAME=anomradar
REMOTE_DB_USER=anomradar
REMOTE_DB_PASSWORD=change_this_password

# YTJ API (Finnish Business Registry)
YTJ_API_KEY=your_ytj_api_key_here
YTJ_API_URL=https://avoindata.prh.fi/bis/v1

# OWASP ZAP
ZAP_API_KEY=your_zap_api_key_here
ZAP_API_URL=http://localhost:8080

# Nmap
NMAP_PATH=/usr/bin/nmap
NMAP_OPTIONS=-sV -sC --script=banner,http-title

# Scanner Settings
SIMULATION_MODE=false
SCAN_TIMEOUT=300000
MAX_CONCURRENT_SCANS=3

# Risk Scoring Thresholds
RISK_HIGH_THRESHOLD=70
RISK_MEDIUM_THRESHOLD=40
RISK_LOW_THRESHOLD=20

# Notification Settings (Whitelist Only)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_IDS=
WHATSAPP_API_KEY=
WHATSAPP_ENABLED=false
NOTIFICATIONS_ENABLED=false

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/anomradar/backend.log
