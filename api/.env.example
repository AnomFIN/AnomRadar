# API Configuration

# Database (Local or Remote MySQL)
# For deployment on anomfin.fi, this connects to local MySQL on the server
DB_HOST=localhost
DB_PORT=3306
DB_NAME=anomradar
DB_USER=anomradar
DB_PASSWORD=change_this_password
DB_CHARSET=utf8mb4

# FTP Deployment Settings (used when deployed to anomfin.fi)
# These settings are automatically configured by deployment scripts
DEPLOYED_ON_ANOMFIN=false
ANOMFIN_API_URL=https://anomfin.fi/api/radar
ANOMFIN_FRONTEND_URL=https://anomfin.fi/radar-ui

# Data Retention
DATA_RETENTION_DAYS=90

# Report Settings
REPORT_OUTPUT_PATH=/var/www/anomradar/api/reports/generated
REPORT_BASE_URL=https://anomradar.example.com/reports

# Notification Settings (Whitelist Only)
TELEGRAM_BOT_TOKEN=
TELEGRAM_WHITELIST_CHAT_IDS=
WHATSAPP_API_KEY=
WHATSAPP_WHITELIST_NUMBERS=
NOTIFICATIONS_ENABLED=false

# API Security
API_KEY=your_secure_api_key_here
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://anomradar.example.com

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/anomradar/api.log

# Application
APP_ENV=production
APP_DEBUG=false
