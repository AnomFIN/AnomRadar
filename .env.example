# AnomRadar v2 Configuration
# Copy this to .env and customize

# Application Settings
APP_NAME=AnomRadar
APP_VERSION=2.0.0
DEBUG=false

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_DIR=~/.anomradar/cache

# Scanner Settings
SCANNER_TIMEOUT=30
SCANNER_MAX_RETRIES=2

# HTTP Scanner
HTTP_USER_AGENT=AnomRadar/2.0 (Security Scanner)
HTTP_FOLLOW_REDIRECTS=true

# DNS Scanner
DNS_NAMESERVERS=8.8.8.8,1.1.1.1

# SSL Scanner
SSL_VERIFY_EXPIRATION=true
SSL_CHECK_WEAK_CIPHERS=true

# Report Settings
REPORT_OUTPUT_DIR=~/.anomradar/reports
REPORT_TEMPLATE=default

# Logging
LOG_LEVEL=INFO
LOG_FILE=~/.anomradar/logs/anomradar.log
