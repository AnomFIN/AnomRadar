# FTP Deployment Configuration for anomfin.fi

# FTP Server Settings
FTP_HOST=ftp.anomfin.fi
FTP_PORT=21
FTP_USER=your_ftp_username
FTP_PASSWORD=your_ftp_password
FTP_USE_SSL=true

# Remote Paths on anomfin.fi
FTP_REMOTE_API_PATH=/public_html/api/radar
FTP_REMOTE_FRONTEND_PATH=/public_html/radar-ui
FTP_REMOTE_REPORTS_PATH=/public_html/api/radar/reports

# MySQL Database Settings for anomfin.fi
REMOTE_DB_HOST=localhost
REMOTE_DB_PORT=3306
REMOTE_DB_NAME=anomradar
REMOTE_DB_USER=anomradar
REMOTE_DB_PASSWORD=change_this_password
REMOTE_DB_CHARSET=utf8mb4

# Report Settings for anomfin.fi
REMOTE_REPORT_BASE_URL=https://anomfin.fi/api/radar/reports
REMOTE_API_BASE_URL=https://anomfin.fi/api/radar

# Backup Settings
BACKUP_ENABLED=true
BACKUP_PATH=./backups
